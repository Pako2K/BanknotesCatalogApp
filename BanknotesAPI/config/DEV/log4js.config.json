{
    "appenders": {
        "out": {
            "type": "stdout",
            "layout": {
                "type": "pattern",
                "pattern": "%[%d{yyyy-MM-dd hh:mm:ss.SSS} - [%-6p] - %f{1}.%l -%] %m"
            }
        },
        "file": {
            "type": "dateFile",
            "filename": "./logs/banknotes-api.log",
            "daysToKeep": 10,
            "layout": {
                "type": "pattern",
                "pattern": "%d{yyyy-MM-dd hh:mm:ss.SSS} - [%-6p] - %f{1}.%l - %m"
            }
        }
    },
    "categories": {
        "default": { "appenders": ["out", "file"], "level": "debug", "enableCallStack": true }
    }
}